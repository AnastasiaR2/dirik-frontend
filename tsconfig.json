{
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "plugins": [{ "name": "typescript-plugin-css-modules" }],
}
